{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "target": "es2015",
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["dist", "build", "node_modules", "**/*.test.*", "**/*.spec.*"]
}
